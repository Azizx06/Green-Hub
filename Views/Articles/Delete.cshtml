@model JeddahGreenHub.Models.Article

@{
    ViewData["Title"] = "Delete";
}




<div class="deleteAndCreate">
    <h4>Delete Article</h4>
    <h6>Are you sure you want to delete this?</h6>
    <hr />
    <dl >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="form-group" style="text-align:center;">

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Article Image" style="max-width: 250px auto; border-radius: 15px;" class="img-thumbnail" /><br />   
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dd><br />
            <form asp-action="Delete" class="align-content-center">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="a a:hover">Back to List</a>
            </form>
        </dd>
    </dl>
    
</div><br /> 
